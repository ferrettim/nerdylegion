<div class="col-md-12">
  <%= simple_form_for(@setting) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <ul class="list-inline">
        <li class="col-md-8 col-sm-8 col-xs-12">
          <label name="name">* Website Name</label>
          <%= f.input :name, label: false, placeholder: "Enter website name", class: "form-control" %>
        </li>
        <li class="col-md-4 col-sm-4 col-xs-12">
          <label name="image">* Upload Favicon</label>
          <%= f.file_field :favicon %>
        </li>
      </ul>
      <div class="clearfix"></div>
      <%= f.input :description, as: :trix_editor, class: "form-control" %>
      <%= f.input :title, placeholder: "Enter a catchy website title", class: "form-control" %>
      <%= f.input :keywords, placeholder: "Enter comma separated keywords for this site", class: "form-control" %>
    </div>
    <div class="form-inputs">
      <h4 class="body-header">Social Links <small>(Not required)</small></h4>
      <ul class="list-inline">
        <li class="col-md-6 col-sm-6 col-xs-12">
          <div class="input-group">
            <span class="input-group-addon" id="emailAddon"><i class="fa fa-envelope"></i></span>
            <%= f.input :email, label: false, placeholder: "Email", class: "form-control" %>
          </div>
        </li>
        <li class="col-md-6 col-sm-6 col-xs-12">
          <div class="input-group">
            <span class="input-group-addon" id="facebookAddon"><i class="fa fa-facebook"></i></span>
            <%= f.input :facebook, label: false, placeholder: "Facebook Page", class: "form-control" %>
          </div>
        </li>
        <li class="col-md-6 col-sm-6 col-xs-12">
          <div class="input-group">
            <span class="input-group-addon" id="twitterAddon"><i class="fa fa-twitter"></i></span>
            <%= f.input :twitter, label: false, placeholder: "Twitter handle (no @)", class: "form-control" %>
          </div>
        </li>
        <li class="col-md-6 col-sm-6 col-xs-12">
          <div class="input-group">
            <span class="input-group-addon" id="instagramAddon"><i class="fa fa-instagram"></i></span>
            <%= f.input :instagram, label: false, placeholder: "Instagram Name", class: "form-control" %>
          </div>
        </li>
        <li class="col-md-6 col-sm-6 col-xs-12">
          <div class="input-group">
            <span class="input-group-addon" id="twitchAddon"><i class="fa fa-twitch"></i></span>
            <%= f.input :twitch, label: false, placeholder: "Twitch Link", class: "form-control" %>
          </div>
        </li>
        <li class="col-md-6 col-sm-6 col-xs-12">
          <div class="input-group">
            <span class="input-group-addon" id="itunesAddon"><i class="fa fa-reddit"></i></span>
            <%= f.input :reddit, label: false, placeholder: "Reddit Link", class: "form-control" %>
          </div>
        </li>
      </ul>
    </div>
    <div class="form-inputs">
      <h4 class="body-header">Patreon Page <small>(Not required)</small></h4>
      <div class="input-group">
        <span class="input-group-addon" id="patreonAddon"><i class="fa fa-dollar"></i></span>
        <%= f.input :patreon, label: false, class: "form-control" %>
      </div>
    </div>
    <div class="clearfix"><br /></div>
    <div class="form-actions">
      <%= f.button :submit, class: "btn btn-primary col-md-12 col-sm-12 col-xs-12" %>
    </div>

  <% end %>
  <div class="clearfix"><br /><br /></div>

</div>
