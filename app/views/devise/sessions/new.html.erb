<div class="col-md-6 col-md-offset-3 panel panel-default">
  <div class="panel-header">
    <br />
    <h2 class="text-center body-header">Login</h2>
  </div>
  <div class="panel-body">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-group">
        <div class="input-group">
          <span class="input-group-addon" id="emailAddon"><i class="fa fa-envelope"></i></span>
          <%= f.email_field :email, autofocus: true, placeholder: "Enter email address", class: "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <div class="input-group">
          <span class="input-group-addon" id="passwordAddon"><i class="fa fa-key"></i></span>
          <%= f.password_field :password, placeholder: "Enter your password", autocomplete: "off", class: "form-control"  %>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end -%>
      <br />
      <%= f.submit "Log in", class: "btn btn-primary", style: "width: 100% !important;" %>
      <div class="clearfix"></div>
  </div>
  <% end %>

</div>
