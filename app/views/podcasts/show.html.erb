<% meta_title @podcast.title.titleize %>
<% meta_description strip_tags(@podcast.description.truncate(160, separator: ' ')) %>
<% og_title @podcast.title.titleize %>
<% og_description strip_tags(@podcast.description.truncate(160, separator: ' ')) %>
<% og_type "article" %>
<% og_url root_url + "podcasts/" + @podcast.slug.to_s %>
<% og_image @podcast.logourl.to_s if @podcast.logourl? %>

<div class="col-md-12 box">
  <div class="col-md-9 col-sm-9 col-xs-12">

    <div class="panel panel-default">
      <div class="panel-heading">
        <h2 class="body-header">
          <%= link_to "About This Podcast", @podcast, title: @podcast.title.to_s %>
        </h2>
      </div>
      <div class="panel-body">
        <div class="col-md-12 col-sm-12 col-xs-12">
          <div class="pull-left" style="padding: 0 15px 5px 0;">
            <%= image_tag "https://nl1.nyc3.digitaloceanspaces.com/assets/loading.gif", data: { src: @podcast.logourl.to_s }, alt: "#{@podcast.title}", width: "100%;" %>
            <% if user_signed_in? && current_user.podcaster? %>
              <br />
              <% if current_user.admin? %>
                <%= link_to edit_podcast_path(@podcast.id),
                          class: "btn btn-primary btn-xs col-md-12 col-sm-12 col-xs-12",
                          title: "Edit podcast" do %>
                          Edit Podcast
                <% end %>
              <% else %>
                <% if current_user.id == @podcast.user_id %>
                  <%= link_to edit_podcast_path(@podcast.id),
                            class: "btn btn-primary btn-xs col-md-12 col-sm-12 col-xs-12",
                            title: "Edit podcast" do %>
                            Edit Podcast
                  <% end %>
                <% end %>
                <% if current_user.id == @podcast.user2_id %>
                  <%= link_to edit_podcast_path(@podcast.id),
                            class: "btn btn-primary btn-xs col-md-12 col-sm-12 col-xs-12",
                            title: "Edit podcast" do %>
                            Edit Podcast
                  <% end %>
                <% end %>
                <% if current_user.id == @podcast.user3_id %>
                  <%= link_to edit_podcast_path(@podcast.id),
                            class: "btn btn-primary btn-xs col-md-12 col-sm-12 col-xs-12",
                            title: "Edit podcast" do %>
                            Edit Podcast
                  <% end %>
                <% end %>
                <% unless current_user.id == @podcast.user_id && @podcast.producer_id %>
                  <% if current_user.id == @podcast.producer_id %>
                    <%= link_to edit_podcast_path(@podcast.id),
                              class: "btn btn-primary btn-xs col-md-12 col-sm-12 col-xs-12",
                              title: "Edit podcast" do %>
                              Edit Podcast
                    <% end %>
                  <% end %>
                <% end %>
              <% end %>
            <% end %>
          </div>
            <p style="margin-top: -15px;">
              <%= @podcast.description.html_safe %>
            </p>
              <p><%= @podcast.title %> is hosted by
                <% @host.each do |host| %>
                  <%= link_to host.name, "https://www.twitter.com/" + host.twitter, title: host.name + " on Twitter", target: "_blank", rel: "noopener" %>
                <% end %>
                <% if @podcast.user2_id? && @podcast.user3_id.blank? %>
                  <% @host2.each do |host2| %>
                    and <%= link_to host2.name, "https://www.twitter.com/" + host2.twitter, title: host2.name + " on Twitter", target: "_blank", rel: "noopener" %>
                  <% end %>
                <% end %>
                <% if @podcast.user2_id? && @podcast.user3_id? %>
                  <% @host2.each do |host2| %>
                    , <%= link_to host2.name, "https://www.twitter.com/" + host2.twitter, title: host2.name + " on Twitter", target: "_blank", rel: "noopener" %>
                  <% end %>
                  <% @host3.each do |host3| %>
                    and <%= link_to host3.name, "https://www.twitter.com/" + host3.twitter, title: host3.name + " on Twitter", target: "_blank", rel: "noopener" %>
                  <% end %>
                <% end %>
                and produced by
                <% @producer.each do |p| %>
                  <%= link_to p.name, "https://www.twitter.com/" + p.twitter, title: p.name + " on Twitter", target: "_blank", rel: "noopener" %>.
                <% end %>
                You can support this show by visiting our <%= link_to "merch store", "https://nerdylegion.threadless.com", target: "_blank", title: "Threadless" %>
                  <% if @podcast.patreon? %>
                  , directly though <%= link_to "Patreon", @podcast.patreon.to_s, target: "_blank", title: "Patreon" %>,
                  <% end %>
                or feel free to get in touch with us <% if @podcast.twitter? %>via Twitter, <%= link_to "@" + @podcast.twitter, "https://www.twitter.com/" + @podcast.twitter, title: "Twitter", target: "_blank", rel: "noopener" %>,<% end %> by <%= mail_to @podcast.email, "sending us an e-mail", subject: @podcast.title, title: "Contact us", encode: "hex" %>.
              </p>
              <p><%= @podcast.title.to_s %> has released <strong><%= @podcast.episodes.count %> episodes</strong> since launching on <%= @podcast.created_at.strftime("%b %m, %Y") %></p>
          <div class="clearfix"></div>
          <div class="col-md-12">
            <ul class="list-inline">
              <li><strong>Subscribe:</strong></li>
              <% if @podcast.itunes? %>
                <li><%= link_to @podcast.itunes, target: "_blank", rel: "noopener" do %>
                  Apple Podcasts<% end %></li>
              <% end %>
              <% if @podcast.google? %>
                <li><%= link_to @podcast.google, target: "_blank", rel: "noopener" do %>
                  Google Play<% end %></li>
              <% end %>
              <% if @podcast.spotify? %>
                <li><%= link_to @podcast.spotify, target: "_blank", rel: "noopener" do %>
                  Spotify<% end %></li>
              <% end %>
              <% if @podcast.stitcher? %>
                <li><%= link_to @podcast.stitcher, target: "_blank", rel: "noopener" do %>
                  Stitcher<% end %></li>
              <% end %>
              <% if @podcast.tunein? %>
                <li><%= link_to @podcast.tunein, target: "_blank", rel: "noopener" do %>
                  TuneIn<% end %></li>
              <% end %>
              <% if @podcast.youtube? %>
                <li><%= link_to @podcast.youtube, target: "_blank", rel: "noopener" do %>
                  YouTube<% end %></li>
              <% end %>
              <li><%= link_to root_url + "podcasts/" + @podcast.slug.to_s + ".rss" do %>
                RSS<% end %></li>
            </ul>
          </div>
        </div>
      </div>
    </div>

    <% if @last %>
      <% @episodes.each do |e| %>
          <div class="panel panel-default">
          <div class="panel-heading">
            <h4 class="body-header">
              <%= link_to e, title: e.podcast.title + " Ep " + e.episode.to_s + ": " +  e.title.titleize do %>
                <% if e.episodetype == "Bonus" %>BONUS: <% end %><%= e.title.titleize %>
              <% end %>
            </h4>

          </div>
          <div class="panel-body">
            <div class="col-md-12">
              <div class="pull-left">
                <%= link_to e, title: e.podcast.title + " Ep " + e.episode.to_s + ": " +  e.title.titleize do %>
                  <%= image_tag "https://nl1.nyc3.digitaloceanspaces.com/assets/loading.gif", data: { src: @podcast.logourl.to_s }, alt: "#{@podcast.title.titleize}", width: "90%;" %>
                <% end %>
              </div>
              <p style="margin-top: -15px;">
                <%= e.description.html_safe %>
              </p>
            </div>
          </div>
          <div class="panel-footer">
            <ul class="list-inline">
              <% if e.download_size? %>
                <li>
                  <%= link_to e.audiourl.to_s, title: "Download MP3", class: "track_downloads", data: { podcast: e.podcast.title.to_s, episode: e.episode.to_s, title: e.title.to_s, value: e.podcast.title.to_s + " Ep " + e.episode.to_s } do %>
                    <i class="fa fa-download"></i> Download (<%= e.download_size %> MB)</li>
                  <% end %>
              <% end %>
              <% if e.duration? %>
                <li>
                  <i class="fa fa-clock-o"></i> <%= e.duration %></li>
              <% end %>
              <li><i class="fa fa-calendar"></i> <%= e.published_on.strftime("%b %d, %Y") %></li>
              <% if user_signed_in? && current_user.podcaster? %>
                <% if current_user.admin? %>
                  <li><i class="fa fa-edit"></i>
                    <%= link_to edit_episode_path(e.id),
                              title: "Edit episode" do %>
                              Edit
                    <% end %>
                  </li>
                  <li><i class="fa fa-remove"></i>
                    <%= link_to episode_path(e.id),
                              method: :delete,
                              data: { confirm: "Are you sure you want to delete this episode?" },
                              title: "Delete episode" do %>
                              Delete
                    <% end %>
                  </li>
                <% else %>
                  <li><i class="fa fa-edit"></i>
                    <% if current_user.id == @podcast.user_id %>
                      <%= link_to edit_episode_path(e.id),
                                title: "Edit episode" do %>
                                Edit
                      <% end %>
                    <% end %>
                    <% if current_user.id == @podcast.user2_id %>
                      <%= link_to edit_episode_path(e.id),
                                title: "Edit episode" do %>
                                Edit
                      <% end %>
                    <% end %>
                    <% if current_user.id == @podcast.user3_id %>
                      <%= link_to edit_episode_path(e.id),
                                title: "Edit episode" do %>
                                Edit
                      <% end %>
                    <% end %>
                    <% unless current_user.id == @podcast.user_id && @podcast.producer_id %>
                      <% if current_user.id == @podcast.producer_id %>
                        <%= link_to edit_episode_path(e.id),
                                  title: "Edit episode" do %>
                                  Edit
                        <% end %>
                      <% end %>
                    <% end %>
                  </li>
                  <li><i class="fa fa-remove"></i>
                    <% if current_user.id == @podcast.user_id %>
                      <%= link_to episode_path(e.id),
                                method: :delete,
                                data: { confirm: "Are you sure you want to delete this episode?" },
                                title: "Delete episode" do %>
                                Delete
                      <% end %>
                    <% end %>
                    <% if current_user.id == @podcast.user2_id %>
                      <%= link_to episode_path(e.id),
                                method: :delete,
                                data: { confirm: "Are you sure you want to delete this episode?" },
                                title: "Delete episode" do %>
                                Delete
                      <% end %>
                    <% end %>
                    <% if current_user.id == @podcast.user3_id %>
                      <%= link_to episode_path(e.id),
                                method: :delete,
                                data: { confirm: "Are you sure you want to delete this episode?" },
                                title: "Delete episode" do %>
                                Delete
                      <% end %>
                    <% end %>
                    <% unless current_user.id == @podcast.user_id && @podcast.producer_id %>
                      <% if current_user.id == @podcast.producer_id %>
                        <%= link_to episode_path(e.id),
                                  method: :delete,
                                  data: { confirm: "Are you sure you want to delete this episode?" },
                                  title: "Delete episode" do %>
                                  Delete
                        <% end %>
                      <% end %>
                    <% end %>
                  </li>
                <% end %>
              <% end %>
            </ul>
          </div>
        </div>
      <% end %>
      <% if @pagy.count > 5 %>
        <div class="text-center" style="margin-top: -40px;"><%== pagy_nav_bootstrap(@pagy).html_safe %></div>
      <% end %>
    <% else %>
      <div class="alert alert-info text-center">
        <h3 class="body-header">This podcast is launching soon!</h3>
      </div>
    <% end %>
  </div>

  <%= render "pages/sidebar" %>


</div>
