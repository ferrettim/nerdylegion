<%= simple_form_for(@podcast, multipart: true, html: { id: "fileupload" }) do |f| %>
  <%= f.error_notification %>

    <div class="col-md-12">
      <% if @podcast.logourl? %>
        <div class="col-md-12">
          <div class="col-md-9">
            <label name="image">Upload logo</label>
            <%= f.file_field :logourl %>
          </div>
          <div class="col-md-3">
          </div>
        </div>
      <% else %>
        <label name="image">Upload logo</label>
        <%= f.file_field :logourl %>
      <% end %>
      <br />
      <%= f.input :title %>
      <div class="clearfix"></div>
      <%= f.input :description, as: :hidden %>
      <trix-editor input="podcast_description"></trix-editor>
      <div class="clearfix"><br /></div>
      <%= f.input :path %>
      <h4>People</h4>
      <ul class="list-inline">
        <li class="col-md-3">
          <label name="podcast_id">Host</label>
          <%= f.input :user_id, class: "form-control", label: false do %>
            <%= f.select :user_id, User.where(podcaster: true).order(name: :asc).map { |u| [u.name, u.id.to_s, { class: u.id.to_s }] }, include_blank: true, class: "form-control" %>
          <% end %>
        </li>
        <li class="col-md-3">
          <label name="podcast_id2">Host 2</label>
          <%= f.input :user2_id, class: "form-control", label: false do %>
            <%= f.select :user2_id, User.where(podcaster: true).order(name: :asc).map { |u| [u.name, u.id.to_s, { class: u.id.to_s }] }, include_blank: true, class: "form-control" %>
          <% end %>
        </li>
        <li class="col-md-3">
          <label name="podcast_id2">Host 3</label>
          <%= f.input :user3_id, class: "form-control", label: false do %>
            <%= f.select :user3_id, User.where(podcaster: true).order(name: :asc).map { |u| [u.name, u.id.to_s, { class: u.id.to_s }] }, include_blank: true, class: "form-control" %>
          <% end %>
        </li>
        <li class="col-md-3">
          <label name="podcast_id">Producer</label>
          <%= f.input :producer_id, class: "form-control", label: false do %>
            <%= f.select :producer_id, User.where(podcaster: true).order(name: :asc).map { |u| [u.name, u.id.to_s, { class: u.id.to_s }] }, include_blank: true, class: "form-control" %>
          <% end %>
        </li>
      </ul>
      <h4>Social Links</h4>
      <div class="col-md-12">
        <div class="col-md-6">
          <label name="twitter">Twitter</label>
          <div class="input-group">
            <span class="input-group-addon" id="twitterAddon">@</span>
            <%= f.input :twitter, placeholder: "username", label: false %>
          </div>
        </div>
        <div class="col-md-6">
          <%= f.input :email, placeholder: "Enter email" %>
        </div>
      </div>
      <div class="col-md-12">
        <div class="col-md-6">
          <%= f.input :itunes, label: "iTunes", placeholder: "iTunes feed" %>
        </div>
        <div class="col-md-6">
          <%= f.input :google, label: "Google Play", placeholder: "Google Play" %>
        </div>
      </div>
      <div class="col-md-12">
        <div class="col-md-6">
          <%= f.input :stitcher, label: "Stitcher", placeholder: "Stitcher" %>
        </div>
        <div class="col-md-6">
          <%= f.input :tunein, label: "TuneIn", placeholder: "TuneIn" %>
        </div>
      </div>
      <div class="col-md-12">
        <div class="col-md-6">
          <%= f.input :youtube, label: "YouTube", placeholder: "YouTube" %>
        </div>
        <div class="col-md-6">
          <%= f.input :patreon, label: "Patreon Link", placeholder: "Enter Patreon link" %>
        </div>
      </div>
      <h4>Meta</h4>
      <div class="col-md-12">
        <%= f.input :published_on %><br />
      </div>
      <div class="col-md-12">
        <div class="col-md-5">
          <% if @podcast.genre? %>
            <%= f.input :genre, collection: ["Arts",
                                             "Comedy",
                                             "Games & Hobbies",
                                             "News & Politics",
                                             "Technology",
                                             "TV & Film"],
                                selected: @podcast.genre.to_s,
                                label: "Genre",
                                class: "form-control" %>
          <% else %>
            <%= f.input :genre, collection: ["Arts",
                                             "Comedy",
                                             "Games & Hobbies",
                                             "News & Politics",
                                             "Technology",
                                             "TV & Film"],
                                selected: "Arts",
                                label: "Genre",
                                class: "form-control" %>
          <% end %>
        </div>
        <div class="col-md-5">
          <%= f.input :status, collection: ["Published",
                                            "Archived",
                                            "Draft"],
                                 selected: "Published",
                                 label: "Status",
                                 class: "form-control" %>
          <%= f.hidden_field :language, value: "English" %>
        </div>
        <div class="col-md-2">
          <%= f.input :mature, class: "checkbox" %>
        </div>
      </div>
      <div class="clearfix"></div>
      <div class="col-md-9 form-button">
        <%= f.button :submit, class: "btn btn-primary col-md-12 col-sm-12 col-xs-12", data: {disable_with: "Saving..."} %>
      </div>
      <div class="col-md-3 form-button">
        <%= link_to 'Cancel', podcasts_path, class: "btn btn-default col-md-12 col-sm-12 col-xs-12" %>
      </div>
    </div>
<% end %>
<div class="clearfix"><br /></div>
